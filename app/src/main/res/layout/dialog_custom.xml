<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700px"
    android:layout_height="390px"
    android:background="@drawable/shap_dialog_green_5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10px"
        android:layout_width="700px"
        android:layout_height="380px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shap_dialog_white"
        android:orientation="vertical"
        android:paddingLeft="10px"
        android:paddingRight="10px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_custom_title"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:textColor="@color/text_666666"
                android:text="哈哈"
                android:textSize="30px" />
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/dialog_tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="98px"
                android:textColor="@color/text_666666"
                android:text="本次更新：\n.兼容安卓8.0.\n修复部分已知问题\n"
                android:textSize="30px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="74px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_tv_confirm"
                android:layout_width="220px"
                android:layout_height="82px"
                android:background="@drawable/shap_dialog_green_5dp"
                android:gravity="center"
                android:text="@string/string_confirm"
                android:textColor="@color/white"
                android:textSize="34px" />

            <TextView
                android:id="@+id/dialog_tv_cancel"
                android:layout_width="220px"
                android:layout_height="82px"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40px"
                android:background="@drawable/shap_dialog_green_stroke_10px"
                android:gravity="center"
                android:text="@string/string_cancel"
                android:textColor="@color/app_bg"
                android:textSize="34px" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>