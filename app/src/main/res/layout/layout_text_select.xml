<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220px"
    android:layout_height="24dp"
    android:layout_marginLeft="30px"
    android:orientation="vertical">

    <TextView
        android:id="@+id/select_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/text_view_selector"
        android:gravity="center"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:text="@string/string_math"
        android:textColor="@color/app_bg"
        android:textSize="@dimen/text_size_10" />

    <ImageView
        android:id="@+id/select_iv_math"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select_tv_name"
        android:layout_alignRight="@+id/select_tv_name"
        android:src="@drawable/ic_select"
        app:layout_constraintBottom_toBottomOf="@+id/select_tv_name"
        app:layout_constraintRight_toRightOf="@+id/select_tv_name" />
</android.support.constraint.ConstraintLayout>