<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68px"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_marginLeft="10px"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/home_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_home_logo" />
    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/home_back"
        android:id="@+id/home_logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12"
        />

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/home_tv_object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12" />

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/home_tv_object"
        android:layout_width="8dp"
        android:layout_height="6dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_down" />

    <com.example.qqweq.mvpdemo.view.RoundImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/home_name"
        android:id="@+id/home_user_cion"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10px"
        android:src="@drawable/ic_home_default_icon" />

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/home_school"
        android:id="@+id/home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="18px"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_10" />

    <TextView
        android:layout_marginRight="30px"
        android:includeFontPadding="false"
        app:layout_constraintRight_toLeftOf="@+id/home_iv_notify"
        android:id="@+id/home_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_10" />

    <TextView
        android:layout_marginRight="30px"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/home_iv_notify"
        app:layout_constraintRight_toLeftOf="@+id/home_iv_notify"
        android:id="@+id/home_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_10" />

    <ImageView
        android:layout_marginRight="20px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/settingIcon"
        android:id="@+id/home_iv_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_notify" />

    <ImageView
        app:layout_constraintRight_toRightOf="@+id/home_iv_notify"
        app:layout_constraintTop_toTopOf="@+id/home_iv_notify"
        android:id="@+id/home_iv_notify_red"
        android:layout_width="8px"
        android:layout_height="8px"
        android:background="@drawable/shap_red"
        android:visibility="gone"
         />
    <IconTextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/settingIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="@string/fa_cog"
        android:textColor="@color/white"
        android:textSize="34px"
        />
</android.support.constraint.ConstraintLayout>