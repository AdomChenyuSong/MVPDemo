<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_parent_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/line_devide"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="30px"
        android:background="#efefef"
        app:layout_constraintTop_toBottomOf="@+id/fl_parent_section" />

    <FrameLayout
        android:id="@+id/fl_body1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="14px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fl_body2"
        app:layout_constraintTop_toBottomOf="@+id/line_devide"></FrameLayout>

    <FrameLayout
        android:id="@+id/fl_body2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="14px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/fl_body1"
        app:layout_constraintRight_toLeftOf="@+id/fl_body3"
        app:layout_constraintTop_toBottomOf="@+id/line_devide"></FrameLayout>

    <FrameLayout
        android:id="@+id/fl_body3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="14px"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/fl_body2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_devide"></FrameLayout>


</android.support.constraint.ConstraintLayout>