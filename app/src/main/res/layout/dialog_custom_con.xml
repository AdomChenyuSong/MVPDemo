<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="700px"
    android:layout_height="390px"
    android:background="@drawable/shap_dialog_green_5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tv_msg"
        android:layout_width="0dp"
        android:layout_height="380px"
        android:layout_marginTop="15px"
        android:background="@drawable/shap_dialog_white"
        android:gravity="center"
        android:maxLines="8"
        android:padding="10px"
        android:scrollbars="vertical"
        android:text="本次更新：知问题\n修复部分已知问题\n"
        android:textColor="@color/text_666666"
        android:textSize="30px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginRight="20px"
        android:id="@+id/dialog_tv_confirm"
        android:layout_width="220px"
        android:layout_height="82px"
        android:background="@drawable/shap_dialog_green_5dp"
        android:gravity="center"
        android:text="@string/string_confirm"
        android:textColor="@color/white"
        android:textSize="34px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/line_view" />
    <View
        android:id="@+id/line_view"
        android:layout_width="1px"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></View>
    <TextView
        android:id="@+id/dialog_tv_cancel"
        android:layout_width="220px"
        android:layout_height="82px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20px"
        android:background="@drawable/shap_dialog_green_stroke_10px"
        android:gravity="center"
        android:text="@string/string_cancel"
        android:textColor="@color/app_bg"
        android:textSize="34px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/line_view" />


</android.support.constraint.ConstraintLayout>